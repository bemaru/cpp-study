{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build with g++ to build/ subdirectory"
        },
        {
            "type": "shell",
            "label": "Create build directory",
            "command": "powershell",
            "args": [
                "-Command",
                "if (!(Test-Path '${fileDirname}\\build')) { New-Item -ItemType Directory -Path '${fileDirname}\\build' -Force }"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++17",
                "/I",
                "${env:USERPROFILE}\\vcpkg\\installed\\x64-windows\\include",
                "/Fo:${fileDirname}\\build\\",
                "/Fe:${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
                "/Fd:${fileDirname}\\build\\",
                "${fileBasename}",
                "/link",
                "/LIBPATH:${env:USERPROFILE}\\vcpkg\\installed\\x64-windows\\lib",
                "jsoncpp.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "MSVC build to build/ subdirectory with vcpkg support",
            "dependsOn": ["Create build directory"]
        }
    ]
}